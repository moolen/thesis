<div class="card-content admin-content">
	<i class="delete-question material-icons">close</i>

	{{#isCheckbox this.model.type}}
		<div class="row">
			<div class="col s3 legend-container">
				<h6><b>Answers ({{model.answers.length}})</b></h6>
				<ul class="collection answer-collection">
					{{#each this.model.preparedAnswers}}
						<li class="collection-item">{{label}}: {{value}}</li>
					{{/each}}
				</ul>
			</div>	
			<div class="col s9 chart-container">
				<canvas class="chart-canvas dropable" width="300" height="100"></canvas>
			</div>
		</div>
		
	{{/isCheckbox}}

	{{#isNotCheckbox this.model.type}}
		<div class="row">
			<div class="col s12 m6 answers-row">
				<h6>Answers:</h6>
				{{#each model.answers}}
					<span data-id="{{this.id}}" draggable="true" class="answer-value badge red lighten-3 white-text p-100">{{value}}</span>
				{{/each}}
			</div>
			<div class="col s12 m6 groups-row">
				<div class="group-controls">
					<div class="row">
						<div class="col s7">
							<div class="group-count">
								Groups: <input type="text" name="group-count" value="{{model.groups.length}}">
							</div>
						</div>
						<div class="col s5">
							<button class="remove-all-member btn small red lighten-3">Remove all Answers</button>
						</div>
					</div>
				</div>
				<ul class="groups">
					{{#each model.groups.models}}
						<li data-id="{{id}}" class="dropable group">
							<span class="group-desc">Group: </span>
							<span class="group-name">{{name}}</span>
							<ul class="members">
								{{#each members}}
								<li data-id="{{id}}" class="member">{{value}}<span class="fa fa-remove remove-member "></span></li>
								{{/each}}
							</ul>
						</li>
					{{/each}}
				</ul>
			</div>
            <div class="col s12 m12">
                <div class="group-canvas-view dropable"></div>
            </div>
		</div>
	{{/isNotCheckbox}}
</div>