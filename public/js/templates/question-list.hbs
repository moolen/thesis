<div id="question-list-view">
	<ul class="question-list col s12 m6">
		{{#is this.collection.length 0}}
			<div class="row">
				<div class="col s12">
					<div class="card darken-1">
						<div class="card-content">
							<span class="card-title black-text">No Questions yet..</span>
							{{#is config.isAdmin true}}
								<p>
									No questions there yet. Click on the icon in the bottom-right corner to create your first one. 
								</p>
							{{/is}}

							{{#is config.isAdmin false}}
								<p>
									Please wait a moment.
								</p>
							{{/is}}
							
						</div>
					</div>		
				</div>
			</div>
		{{/is}}
	</ul>	
</div>
