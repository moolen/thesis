<div class="card darken-1 {{model.highlight}}">
    <div class="card-content black-text">
        <span class="card-title black-text">{{ model.question }}</span>
        <!-- BOOL ITEM -->
        {{#is model.type 'bool'}}
            <div class="row">
                <div class="col s12">
                    <p>
                        <input id="true" type="radio" name="group1">
                        <label for="true">richtig</label>
                    </p>
                    <p>
                        <input id="false" type="radio" name="group1">
                        <label for="false">falsch</label>
                    </p>
                </div>
            </div>
            <button class="btn blue waves-effect waves-light" type="submit" name="action">Abschicken</button>
        {{/is}}
        <!-- /BOOL -->
        <!-- MC ITEM -->
        {{#is model.type 'mc'}}
            <div class="row">
                <div class="col s12">
                    {{#each model.acceptedOptions}}
                        <p>
                            <input id="test1" type="radio" name="group1">
                            <label for="test1">{{this.value}}</label>
                        </p>                            
                    {{/each}}
                </div>
            </div>
            <button class="btn blue waves-effect waves-light" type="submit" name="action">Abschicken</button>
        {{/is}}
        <!-- /mc -->

        <!-- SA ITEM -->
        {{#is model.type 'sa'}}
            <form action="">
                <div class="row">
                    <div class="input-field col s12">
                        <input type="text" value="" placeholder="Your answer">
                    </div>
                </div>
                <div class="row">
                    <button class="btn blue waves-effect waves-light" type="submit" name="action">Abschicken</button>
                    
                </div>
            </form>
        {{/is}}
        <!-- /sa -->

        {{#is this.model.type 'go'}}
            <div class="row">
                <div class="input-field col s12">
                    <label for="question-sa">Dein Name:</label>
                    <input id="question-sa" name="question" type="text" >
                </div>
            </div>
            <div class="row">
                <button class="btn blue waves-effect waves-light" type="submit" name="action">Abschicken</button>
                
            </div>
        {{/is}}
    </div>
</div>